<div class="d-flex py-4 px-4 tweet hover">
  <div class="flex-shrink-0">
    <% if current_user.avatar.present? %>
      <%= image_tag current_user.avatar, size: "48x48", class: "rounded-circle" %>
    <% else %>
      <%= image_tag "user.png", size: "48x48", class: "rounded-circle" %>
    <% end %>
  </div>
  <div class="flex-grow-1 ms-3">
    <%= form_with model: Tweet.new, url: form_submit_path, class: "w-100", data: { controller: 'tweet-form' } do |f| %>
      <%= f.text_area :body, placeholder: "What's happening?", class: "form-control w-100 mb-2 tweet-input"  %>
      <div class="d-flex justify-content-end">
        <%= f.submit button_label, class: "btn btn-lg btn-twitter rounded-pill" %>
      </div>
    <% end %>
  </div>
</div>
