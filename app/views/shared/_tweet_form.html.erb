<%= form_with model: Tweet.new, url: tweets_path, class: "w-100", data: { controller: 'tweet-form' } do |f| %>
  <%= f.text_area :body, placeholder: "What's happening?", class: "form-control w-100 mb-2 tweet-input"  %>
  <div class="d-flex justify-content-end">
    <%= f.submit "Tweet", class: "btn btn-lg btn-twitter rounded-pill" %>
  </div>
<% end %>