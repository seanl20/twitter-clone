<% 
  partial_name =  if params[:source] == "tweets/show"
                    "tweets/show_stats"
                  else
                    "tweets/tweet"
                  end
%>

<%= turbo_stream.replace dom_id(@tweet) do %>
  <% render partial: partial_name, locals: { tweet_presenter: TweetPresenter.new(tweet: @tweet, current_user:) } %>
<% end %>
