<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>
  <div>
    <div class="d-flex justify-content-start mb-3">
      <div class="me-4">Views</div>
      <div class="me-4"><span class="fw-bolder"><%= tweet_presenter.retweets_count %></span> Retweets</div>
      <div class="me-4"><span class="fw-bolder"><%= tweet_presenter.likes_count %></span> Likes</div>
    </div>

    <div class="d-flex justify-content-evenly align-items-center action-links tweet-page">
      <div>
        <%= link_to "#", class: "text-decoration-none text-black views" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 me-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
          </svg>
        <% end %>
      </div>
      <div>
        <%= link_to "#", class: "text-decoration-none text-black replies" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 me-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 0 1-.923 1.785A5.969 5.969 0 0 0 6 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337Z" />
          </svg>
        <% end %>
      </div>
      <div>
        <%= link_to tweet_presenter.retweet_tweet_url(source: "tweet_show"), data: { "turbo-method": tweet_presenter.turbo_retweet_data_method }, class: "text-decoration-none #{tweet_presenter.retweet_colour_class} retweets" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="#000000" viewBox="0 0 32 32" stroke-width="1.5" stroke="currentColor" class="size-6 me-1">
            <path d="M 5 7 L 0 12 L 4 12 L 4 25 L 21 25 L 19 23 L 6 23 L 6 12 L 10 12 Z M 9 7 L 11 9 L 24 9 L 24 20 L 20 20 L 25 25 L 30 20 L 26 20 L 26 7 Z"/>
          </svg>
        <% end %>
      </div>
      <div>
        <%= link_to tweet_presenter.like_tweet_url(source: "tweet_show"), data: { "turbo-method": tweet_presenter.turbo_like_data_method }, class: "text-decoration-none text-black likes" do %>
          <%= render partial: tweet_presenter.heart_icon %>
        <% end %>
      </div>
      <div>
        <%= link_to tweet_presenter.bookmark_tweet_url(source: "tweet_show"), data: { "turbo-method": tweet_presenter.turbo_bookmark_data_method }, class: "text-decoration-none text-black bookmark" do %>
          <%= render partial: tweet_presenter.bookmark_icon %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>